/* wxNetwork/components/networkList/index.wxss */

.network-list{
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* z-index: calc(var(--zIndex) + 1); */
  z-index: calc(999999 + 1);
}
.network-list_btn-group{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  box-shadow: 0 5rpx 10rpx 0 rgba(0,0,0,0.2);
}
.network-list_btn-group .btn{
  font-size: 32rpx;
  padding: 10rpx;
  border:  1px solid rgba(0, 0, 0, 0.2);
  margin: 0 20rpx;
}
.network-list_scrollview{
  width: 100%;
  height: calc(100% - 60rpx);
  position: relative;
}
.network-list_item{
  padding: 20rpx;
  text-align: left;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.2);
}
.network-list_item_text{
  width: 100%;
  overflow-wrap: break-word;
}
.network-list_scrollview_none{
  text-align: center;
  padding: 50rpx;
}
.list-bottom {
  width: 100%;
  height: 1px;
}